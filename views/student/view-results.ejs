<!DOCTYPE html>
<html>

<head>
  <title>Student Dashboard</title>
  <!-- Add Bootstrap CSS link -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background: linear-gradient(135deg, #2A3F54, #0D1F2D);
      color: #fff;
      min-height: 100vh;
    }
  </style>
</head>

<body>
  <nav class="navbar navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="#">
        <h1 class="text-white">EduLearn</h1>
      </a>
      <div class="header">
        <h1 class="text-white">Welcome, <%= user.firstName%> <%= user.lastName%></h1>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <div class="row">
      <div class="col-md-3">
        <div class="card bg-transparent border nav-card">
          <div class="card-header border text-white">
            Dashboard
          </div>
          <div class="list-group mt-3 p-2 list-group-flush">
            <a href="/student/dashboard" class="mt-3 btn btn-outline-info ">Dashboard</a>
            <a class="btn btn-outline-info" href="/student/view-courses">View Available Courses</a>
            <a class="btn btn-outline-info" href="/student/enrolled-courses">Enrolled Courses</a>
            <a class="btn btn-info" href="/student/view-results/<%= user._id %>">View Exam Results</a>
            <a class="btn mt-4 btn-danger" href="/student/logout">Logout</a>
          </div>
        </div>
      </div>
      <div class="col-md-9">
        <div class="card bg-transparent text-light border p-4">
          <div class="card-header text-white border">
            <h1>Your Results</h1>
          </div>
          <table>
            <tr>
              <th>Course</th>
              <th>Material</th>
              <th>Score</th>
            </tr>
            <% results.forEach(result => { %>
            <tr>
              <td><%= result.course ? result.course.title : 'N/A' %></td>
              <td><%= result.material ? result.material.title : 'N/A' %></td>
              <td><%= result.score %></td>
            </tr>
            <% }); %>
          </table>

        </div>
      </div>
    </div>
  </div>

  <!-- Add Bootstrap JS and jQuery scripts -->
  <script src=" https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>