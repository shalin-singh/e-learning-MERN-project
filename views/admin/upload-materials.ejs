<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Results</title>
  <!-- Add Bootstrap CSS link -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    /* Body background */
    body {
      background: linear-gradient(135deg, #2A3F54, #0D1F2D);
      color: #fff;
      font-family: Arial, sans-serif;
    }

    /* Active link style */
    .nav-link.active {
      background-color: #071423;
    }

    /* Top navigation bar */
    .navbar {
      background-color: #0a1924;
    }

    .navbar-brand,
    .navbar-brand:hover {
      color: #fff;
    }

    /* Sidebar styles */
    #sidebar {
      background-color: #0f2434;
      color: #ffffff;
      min-height: 100vh;
    }

    /* Content styles */
    .content {
      padding: 20px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
      color: #fff;
    }

    th,
    td {
      border: 1px solid #fff;
      padding: 8px;
      text-align: left;
    }

    th {
      background-color: #0a1924;
    }

    tr:nth-child(even) {
      background-color: #071423;
    }

    tr:nth-child(odd) {
      background-color: #0f2434;
    }
  </style>
</head>

<body>
  <nav class="navbar">
    <div class="container">
      <a class="navbar-brand" href="#">
        <h1 class="text-light">EduLearn</h1>
        <a class="text-light" href="#">
          <h4>Welcome! Admin.</h4>
        </a>
      </a>
    </div>
  </nav>
  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block vh-100">
        <div class="position-sticky mt-3">
          <ul class="nav flex-column">
            <li class="nav-item">
              <a class="nav-link text-light border text-center" href="/admin/dashboard">
                <h5>Dashboard</h5>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link  text-light border-bottom" href="/admin/add-course">Add Course</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-light border-bottom" href="/admin/add-student">Add Student</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active text-light border-bottom" href="/admin/upload-materials">Upload
                Materials</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-light border-bottom" href="/admin/manage-courses">Manage Courses</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-light border-bottom" href="/admin/manage-students">Manage
                Students</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-light border-bottom" href="/admin/manage-materials">Manage
                Materials</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-light border-bottom" href="/admin/view-submissions">View Submissions</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-light border-bottom" href="/admin/view-results">Results</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-light border-bottom" href="/admin/enrollment-requests">Enrollment Requests</a>
            </li>
            <li class="nav-item bg-danger mt-5">
              <a class="nav-link text-light border-bottom" href="/admin/logout">Logout</a>
            </li>
          </ul>
        </div>
      </nav>

      <div class="col-md-9 border p-3 m-2 rounded text-light">
        <form method="post" action="/admin/upload-materials" enctype="multipart/form-data">
          <h1 class="h1">Upload Materials</h1>
          <div class="mb-3">
            <label for="course" class="form-label">Select Course:</label>
            <select id="course" name="course" class="form-select" required>
              <% courses.forEach(course=> { %>
              <option value="<%= course._id %>">
                <%= course.title %>
              </option>
              <% }); %>
            </select>
          </div>
          <div class="mb-3">
            <label for="materialType" class="form-label">Material Type:</label>
            <select id="materialType" name="materialType" class="form-select" required>
              <option value="lecture">Lecture</option>
              <option value="assignments">Assignments</option>
              <option value="other">Study Material</option>
            </select>
          </div>
          <div class="mb-3">
            <label for="title" class="form-label">Title:</label>
            <input type="text" id="title" name="title" class="form-control text-light bg-transparent" required>
          </div>

          <div class="mb-3">
            <label for="description" class="form-label">Description:</label>
            <textarea id="description" name="description" class="form-control text-light bg-transparent" rows="4" required></textarea>
          </div>

          <div class="mb-3">
            <div class="mb-3">
              <label for="file" class="form-label">Upload File (PDF, DOCX, PPTX, MP4, MOV, AVI):</label>
              <input type="file" id="file" name="file" class="form-control bg-transparent text-light" required>
            </div>
            <div class="progress" style="display: none;">
              <div class="progress-bar" role="progressbar" style="width: 0%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">0%</div>
            </div>

            <h3>File Preview:</h3>
            <div class="file-preview mt-2" style="display: none;">
              <div class="preview-image">
                <img id="previewImg" src="#" alt="File Preview" style="max-height: 300px; max-width: 100%;">
                <video id="previewVideo" src="#" controls style="max-height: 300px; max-width: 100%; display: none;"></video>
              </div>
            </div>
          </div>
          <button id="uploadButton" type="submit" class="btn btn-success">Upload</button>
        </form>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>