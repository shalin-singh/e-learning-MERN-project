<!DOCTYPE html>
<html>

<head>
  <title>Admin Dashboard</title>
  <!-- Add Bootstrap CSS link -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    /* Body background */
    body {
      background: linear-gradient(135deg, #2A3F54, #0D1F2D);
      color: #fff;
    }

    /* Active link style */
    .nav-link.active {
      background-color: #071423;
    }

    /* Dashboard heading style */
    .dashboard-heading {
      color: #007bff;
    }

    /* Top navigation bar */
    .navbar {
      background-color: #0a1924;
    }

    .navbar-brand,
    .navbar-brand:hover {
      color: #fff;
    }

    /* Sidebar styles */
    #sidebar {
      background-color: #0f2434;
      color: #ffffff;
    }

    /* Glass effect for cards */
    .glass-card {
      background-color: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
      border: none;
      border-radius: 10px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
    }

    /* Card colors */
    .course-card {
      background-color: #18A689;
      /* Green */
    }

    .student-card {
      background-color: #E74C3C;
      /* Red */
    }

    .question-card {
      background-color: #3498DB;
      /* Blue */
    }

    .result-card {
      background-color: #F39C12;
      /* Orange */
    }
  </style>
</head>

<body>
  <nav class="navbar">
    <div class="container">
      <a class="navbar-brand" href="#">
        <h1 class="text-light">EduLearn</h1>
        <a class="text-light" href="#">
          <h4>Welcome! Admin.</h4>
        </a>
      </a>
    </div>
  </nav>
  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block vh-100">
        <div class="position-sticky mt-3">
          <ul class="nav flex-column">
            <li class="nav-item">
              <a class="nav-link active text-light border text-center" href="/admin/dashboard">
                <h5>Dashboard</h5>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-light border-bottom" href="/admin/add-course">Add Course</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-light border-bottom" href="/admin/add-student">Add Student</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-light border-bottom" href="/admin/upload-materials">Upload
                Materials</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-light border-bottom" href="/admin/manage-courses">Manage Courses</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-light border-bottom" href="/admin/manage-students">Manage
                Students</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-light border-bottom" href="/admin/manage-materials">Manage
                Materials</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-light border-bottom" href="/admin/view-submissions">View Submissions</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-light border-bottom" href="/admin/view-results">Results</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-light border-bottom" href="/admin/enrollment-requests">Enrollment Requests</a>
            </li>
            <li class="nav-item bg-danger mt-5">
              <a class="nav-link text-light border-bottom" href="/admin/logout">Logout</a>
            </li>
          </ul>
        </div>
      </nav>

      <!-- Main content -->
      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 p-4">
        <h1 class="mt-4 dashboard-heading">Dashboard</h1>
        <div class="row">
          <div class="card col-md-4 m-3 glass-card course-card">
            <div class="card-header">
              Total Courses
            </div>
            <div class="card-body">
              <p class="h2">
                <%= courseCount %>
              </p>
            </div>
          </div>

          <div class="card col-md-3 m-3 glass-card question-card">
            <div class="card-header">
              Total Questions
            </div>
            <div class="card-body">
              <p class="h2">
                <%= questionCount %>
              </p>
            </div>
          </div>

          <div class="card col-md-3 m-3 glass-card result-card">
            <div class="card-header">
              Total Results
            </div>
            <div class="card-body">
              <p class="h2">
                <%= resultCount %>
              </p>
            </div>
          </div>

          <div class="card col-md-6 m-3 glass-card material-card">
            <div class="card-header">
              Total Materials
            </div>
            <div class="card-body">
              <p class="h2">
                <%= materialCount %>
              </p>
            </div>
          </div>

          <div class="card col-md-4 m-3 glass-card student-card">
            <div class="card-header">
              Total Students
            </div>
            <div class="card-body">
              <p class="h2">
                <%= studentCount %>
              </p>
            </div>
          </div>
        </div>
      </main>

    </div>
  </div>

  <!-- Add Bootstrap JS and jQuery scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>