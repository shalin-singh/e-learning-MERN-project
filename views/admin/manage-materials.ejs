<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manage Materials</title>
  <!-- Add Bootstrap CSS link -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    /* Body background */
    body {
      background: linear-gradient(135deg, #2A3F54, #0D1F2D);
      color: #fff;
    }

    /* Active link style */
    .nav-link.active {
      background-color: #071423;
    }

    /* Top navigation bar */
    .navbar {
      background-color: #0a1924;
    }

    .navbar-brand,
    .navbar-brand:hover {
      color: #fff;
    }

    /* Sidebar styles */
    #sidebar {
      background-color: #0f2434;
      color: #ffffff;
    }
  </style>
</head>

<body>
  <nav class="navbar">
    <div class="container">
      <a class="navbar-brand" href="#">
        <h1 class="text-light">EduLearn</h1>
        <a class="text-light" href="#">
          <h4>Welcome! Admin.</h4>
        </a>
      </a>
    </div>
  </nav>
  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block vh-100">
        <div class="position-sticky mt-3">
          <ul class="nav flex-column">
            <li class="nav-item">
              <a class="nav-link text-light border text-center" href="/admin/dashboard">
                <h5>Dashboard</h5>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-light border-bottom" href="/admin/add-course">Add Course</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-light border-bottom" href="/admin/add-student">Add Student</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-light border-bottom" href="/admin/upload-materials">Upload
                Materials</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-light border-bottom" href="/admin/manage-courses">Manage Courses</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-light border-bottom" href="/admin/manage-students">Manage
                Students</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active text-light border-bottom" href="/admin/manage-materials">Manage
                Materials</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-light border-bottom" href="/admin/view-submissions">View Submissions</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-light border-bottom" href="/admin/view-results">Results</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-light border-bottom" href="/admin/enrollment-requests">Enrollment Requests</a>
            </li>
            <li class="nav-item bg-danger mt-5">
              <a class="nav-link text-light border-bottom" href="/admin/logout">Logout</a>
            </li>
          </ul>
        </div>
      </nav>
      <div class="col-md-9 border p-4 rounded m-3 text-light">
        <h1>Manage Materials</h1>
        <div class="mb-4">
          <a href="/admin/upload-materials" class="btn btn-success">Upload New Material</a>
        </div>
        <table>
          <thead>
            <tr class="border-bottom mb-">
              <th>Title</th>
              <th>Description</th>
              <th>Course</th>
              <th>Material Type</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% materials.forEach(material=> { %>
            <tr class=" border-bottom p-4">
              <td>
                <%= material.title %>
              </td>
              <td>
                <%= material.description %>
              </td>
              <td>
                <%= material.course.title %>
              </td>
              <td>
                <%= material.materialType %>
              </td>
              <td>
                <a class="btn btn-warning m-2" href="/admin/edit-material/<%= material._id %>">Edit</a>
                <a class="btn btn-danger m-2" href="/admin/delete-material/<%= material._id %>">Delete</a>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>

</html>