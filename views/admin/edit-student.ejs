<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Student</title>
  <!-- Add Bootstrap CSS link -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    /* Body background */
    body {
      background: linear-gradient(135deg, #2A3F54, #0D1F2D);
      color: #fff;
    }

    /* Active link style */
    .nav-link.active {
      background-color: #071423;
    }

    /* Top navigation bar */
    .navbar {
      background-color: #0a1924;
    }

    .navbar-brand,
    .navbar-brand:hover {
      color: #fff;
    }

    /* Sidebar styles */
    #sidebar {
      background-color: #0f2434;
      color: #ffffff;
    }
  </style>
</head>

<body>
  <nav class="navbar">
    <div class="container">
      <a class="navbar-brand" href="#">
        <h1 class="text-light">EduLearn</h1>
        <a class="text-light" href="#">
          <h4>Welcome! Admin.</h4>
        </a>
      </a>
    </div>
  </nav>
  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block vh-100">
        <div class="position-sticky mt-3">
          <ul class="nav flex-column">
            <li class="nav-item">
              <a class="nav-link text-light border text-center" href="/admin/dashboard">
                <h5>Dashboard</h5>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link active text-light border-bottom" href="/admin/add-course">Add Course</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-light border-bottom" href="/admin/add-student">Add Student</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-light border-bottom" href="/admin/upload-materials">Upload
                Materials</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-light border-bottom" href="/admin/manage-courses">Manage Courses</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-light border-bottom" href="/admin/manage-students">Manage
                Students</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-light border-bottom" href="/admin/manage-materials">Manage
                Materials</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-light border-bottom" href="/admin/view-submissions">View Submissions</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-light border-bottom" href="/admin/view-results">Results</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-light border-bottom" href="/admin/enrollment-requests">Enrollment Requests</a>
            </li>
            <li class="nav-item bg-danger mt-5">
              <a class="nav-link text-light border-bottom" href="/admin/logout">Logout</a>
            </li>
          </ul>
        </div>
      </nav>
      <section class="col-md-6 mx-auto m-4">
        <form method="POST" action="/admin/edit-student/<%= student._id %>" class="edit-student-form border rounded p-4">
          <h1 class="mb-4 mt-0">Edit Student</h1>
          <div class="mb-3">
            <label for="firstName" class="form-label">First Name:</label>
            <input type="text" id="firstName" name="firstName" value="<%= student.firstName %>" class="form-control bg-transparent text-light" required>
          </div>
          <div class="mb-3">
            <label for="lastName" class="form-label">Last Name:</label>
            <input type="text" id="lastName" name="lastName" value="<%= student.lastName %>" class="form-control bg-transparent text-light" required>
          </div>
          <div class="mb-3">
            <label for="email" class="form-label">Email:</label>
            <input type="email" id="email" name="email" value="<%= student.email %>" class="form-control bg-transparent text-light" required>
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">Password:</label>
            <input type="password" id="password" name="password" placeholder="Enter new password" class="form-control bg-transparent text-light">
          </div>
          <h3 class="mt-4">Assigned Courses:</h3>
          <ul class="list-unstyled">
            <% student.enrolledCourses.forEach(courseId=> { %>
            <% const course=courses.find(course=> course._id.toString() ===
                        courseId.toString());
                        %>
            <% if (course) { %>
            <li class="border p-2 rounded">
              <%= course.title %> -
              <a href="/admin/remove-course-s/<%= student._id %>/<%= course._id %>" class="text-danger  text-decoration-none ">Remove</a>
            </li>
            <% } %>
            <% }); %>
          </ul>
          <button type="submit" class="btn btn-success">Save Changes</button>
        </form>
      </section>
    </div>
  </div>
  <!-- Add Bootstrap JS and jQuery scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </div>
  </div>
</body>

</html>